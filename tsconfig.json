{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types" : [
      "core-js"
    ],
    "lib": ["dom", "es2017"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "filesGlob": [
    "/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
